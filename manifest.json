{
	"name": "__MSG_appName__",
	"version": "0.0.6",
	"manifest_version": 2,
	"description": "__MSG_appDescription__",
	"icons": {
		"128": "images/icon-128.png"
	},
	"default_locale": "en",
	"background": {
		"scripts": ["scripts/background.js"]
	},
	"browser_action": {
		"default_icon": {
			"38": "images/icon-38.png"
		},
		"default_title": "Semrush"
	},
	"options_page": "options.html",
	"omnibox": {
		"keyword": "Crawler"
	},
	"content_scripts": [
		{
			"matches": ["https://*.semrush.com/*"],
			"js": ["scripts/libs/jquery.min.js", "scripts/contentscript.js"],
			"run_at": "document_start",
			"all_frames": false
		}
	],
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"web_accessible_resources": [
		"scripts/pagination.js",
		"styles/main.css",
		"pagination.html"
	],
	"permissions": [
		"tabs",
		"activeTab",
		"declarativeContent",
		"notifications",
		"cookies",
		"background",
		"debugger",
		"management",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"*://*.semrush.com/",
		"*://*.semrush.com/*",
		"https://semrush.com/",
		"unlimitedStorage"
	]
}
